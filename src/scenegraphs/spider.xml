<scene>
    <instance name="box" path="models/box"></instance>
    <transform>
        <set>
            <scale>1 1 1</scale>
        </set>

        <!-- transformation from bottom to up -->
        <group name="unit-height-spider">
            <transform>
                <set>
                    <scale>0.05 0.05 0.05</scale>
                </set>
                <group name="baseGroup">
                    <group name="centerBody">
                        <transform name="centerBody">
                            <set>
                                <scale>40 20 20</scale>
                            </set>
                            <object instanceof="box-outside" texture="checkerboard-box">
                                <material>
                                    <ambient>0.2 0.2 0.2</ambient>
                                    <diffuse>0.2 0.2 0.2</diffuse>
                                    <specular>0.2 0.2 0.2</specular>
                                    <shininess>100</shininess>
                                </material>
                            </object>
                        </transform>
                    </group>
                    <group name="headPart">
                        <transform name="headPart">
                            <set>
                                <translate>-25 0 0</translate>
                                <scale>10 7 17</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>0.2 0.2 0.2</diffuse>
                                    <specular>0.2 0.2 0.2</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="spiderEye">
                            <set>
                                <translate>-31 0 0</translate>
                                <scale>2 2 2</scale>
                            </set>
                            <light>
                                <ambient>1 0 0</ambient>
                                <diffuse>0.8 0.8 0.8</diffuse>
                                <specular>0.8 0.8 0.8</specular>
                                <position>0 0 0</position>
                                <spotangle>30</spotangle>
                                <spotdirection>-1 0 0</spotdirection>
                            </light>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>0.2 0.2 0.2</diffuse>
                                    <specular>0.2 0.2 0.2</specular>
                                </material>
                            </object>
                        </transform>
                    </group>
                    <group name="legGroup">
                        <transform name="legLeft0">
                            <set>
                                <translate>0 0 10</translate>
                                <rotate>20 1 0 0</rotate>
                                <translate>0 0 10</translate>
                                <translate>-15 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0.1 0.1 0.1</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legRight0">
                            <set>
                                <translate>0 0 -10</translate>
                                <rotate>-20 1 0 0</rotate>
                                <translate>0 0 -10</translate>
                                <translate>-15 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legLeft1">
                            <set>
                                <translate>0 0 10</translate>
                                <rotate>20 1 0 0</rotate>
                                <translate>0 0 10</translate>
                                <translate>-5 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legRight1">
                            <set>
                                <translate>0 0 -10</translate>
                                <rotate>-20 1 0 0</rotate>
                                <translate>0 0 -10</translate>
                                <translate>-5 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>0 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legLeft2">
                            <set>
                                <translate>0 0 10</translate>
                                <rotate>20 1 0 0</rotate>
                                <translate>0 0 10</translate>
                                <translate>5 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legRight2">
                            <set>
                                <translate>0 0 -10</translate>
                                <rotate>-20 1 0 0</rotate>
                                <translate>0 0 -10</translate>
                                <translate>5 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legLeft3">
                            <set>
                                <translate>0 0 10</translate>
                                <rotate>20 1 0 0</rotate>
                                <translate>0 0 10</translate>
                                <translate>15 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                        <transform name="legRight3">
                            <set>
                                <translate>0 0 -10</translate>
                                <rotate>-20 1 0 0</rotate>
                                <translate>0 0 -10</translate>
                                <translate>15 0 0</translate>
                                <scale>5 5 20</scale>
                            </set>
                            <object instanceof="box">
                                <material>
                                    <ambient>1 0 0</ambient>
                                    <diffuse>1 0 0</diffuse>
                                    <specular>0 0 0</specular>
                                </material>
                            </object>
                        </transform>
                    </group>
                </group>
            </transform>
        </group>
    </transform>
</scene>
